<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.turniinfermieri.controller.TurniInfermieriController">
   <top>
      <Label alignment="CENTER" text="Turni Infermieri" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
            <Tab fx:id="Tab_Periodi_Ferie" closable="false" text="Periodi Ferie">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <HBox>
                           <children>
                              <TableView fx:id="TableViewTrimestri" editable="true" maxWidth="-Infinity" prefWidth="303.0">
                                <columns>
                                  <TableColumn fx:id="TableColumnNome" editable="false" prefWidth="90.0" text="Nome" />
                                    <TableColumn fx:id="TableColumnCognome" prefWidth="90.0" text="Cognome" />
                                  <TableColumn fx:id="TableColumnTrimestre" onEditCommit="#onEditCommitTrimestre" prefWidth="120.0" text="Trimestre" />
                                </columns>
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </TableView>
                              <VBox alignment="CENTER">
                                 <children>
                                    <TextArea editable="false" prefHeight="200.0" prefWidth="210.0" text="Scegliere quali infermieri avranno&#10;le &quot;ferie lunghe&quot; (14 giorni) nei&#10;quattro trimestri, gli altri infermieri&#10;potranno fare solamente 2 giorni.&#10;&#10;trimestre 1 (set - nov) : 3 infermieri&#10;trimestre 2 (dic - feb) : 2 infermieri &#10;trimestre 3 (mar - mag) : 3 infermieri&#10;trimestre 4 (giu - ago) : 3 infermieri&#10;&#10;inserire valori da 1 a  4" />
                                    <TextArea fx:id="TextAreaErrore" editable="false" prefHeight="200.0" prefWidth="200.0">
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </TextArea>
                                    <Button mnemonicParsing="false" onAction="#doPeriodiFerie" text="Invia">
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab fx:id="Tab_Richieste_Giorni_Ferie" closable="false" text="Richieste Giorni Ferie">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox alignment="CENTER" layoutX="33.0">
                           <children>
                              <HBox alignment="CENTER">
                                 <children>
                                    <Label text="Seleziona Infermiere : ">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ComboBox fx:id="ComboBoxInfermieri" prefWidth="150.0" />
                                    <Button mnemonicParsing="false" onAction="#doConfermaInfermiere" text="Conferma">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="25.0" prefWidth="232.0">
                                 <children>
                                    <DatePicker fx:id="DatePickerFerie" />
                                    <Button mnemonicParsing="false" onAction="#doModificaFerie" text="Modifica">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox>
                                 <children>
                                    <TableView fx:id="TableViewFerieBrevi" editable="true" onMouseClicked="#doSelectDay">
                                      <columns>
                                        <TableColumn fx:id="TableColumnFerieBrevi" onEditCommit="#onEditCommitFerieBrevi" prefWidth="250.0" text="Ferie Brevi" />
                                      </columns>
                                    </TableView>
                                    <TableView fx:id="TableViewFerieLunghe" editable="true">
                                       <columns>
                                          <TableColumn fx:id="TableColumnFerieLunghe" onEditCommit="#onEditCommitFerieLunghe" prefWidth="250.0" text="Ferie Lunghe" />
                                       </columns>
                                    </TableView>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="Tab_Genera_Orario" closable="false" text="Genera Orario">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="Tab_Orario_Reparto" closable="false" text="Orario Reparto">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="Tab_Orario_Infermieri" closable="false" text="Orario Infermieri">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
